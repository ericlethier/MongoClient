doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/style.css')
        script(src='/javascripts/jquery.min.js')
        script(src='/bootstrap/js/bootstrap.min.js')
    body
        .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
            .container-fluid
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='#') MongoUI
                #navbar.collapse.navbar-collapse
                    ul.nav.navbar-nav.navbar-right
                        li
                            a(href='#') Settings
                        li
                            a(href='#') Help

        .container-fluid
            .row
                .col-sm-3.col-md-2.sidebar
                    .list-group
                        span.list-group-item.active
                            span.glyphicon.glyphicon-lock &nbsp;Connections
                        a.list-group-item(href='/connection/add')
                            span.glyphicon.glyphicon-triangle-right Add
                    .list-group
                        span.list-group-item.active
                            span.glyphicon.glyphicon-oil &nbsp;Databases
                        a.list-group-item(href='/database')
                            span.glyphicon.glyphicon-triangle-right Add
                    .list-group
                        span.list-group-item.active
                            span.glyphicon.glyphicon-duplicate &nbsp;Collections
                        a.list-group-item(href='/collection')
                            span.glyphicon.glyphicon-triangle-right Add

                .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
                    ol.breadcrumb
                        li
                            a(href='#') Home
                        li
                            span= title

                    block content
